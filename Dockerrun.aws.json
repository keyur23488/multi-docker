{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
    {
        "name" : "client",
        "image" : "easternts2021/multi-client",
        "hostname": "client",
        "essential": false
    },
    {
        "name" : "server",
        "image" : "easternts2021/multi-server",
        "hostname": "api",
        "essential": false
    },
    {
        "name" : "worker",
        "image" : "easternts2021/multi-worker",
        "hostname": "worker",
        "essential": false
    },
    {
        "name" : "nginx",
        "image" : "easternts2021/multi-nginx",
        "hostname": "",
        "essential": true,
        "portMappings":[
            {
            "hostPort": 80,
            "containerPort": 80
            }
        ],
        "links":[
            "client", "server"
        ]
    }
    ]
}